{
  "name": "stoic-mirror",
  "version": "0.3.1",
  "description": "A mindful productivity app inspired by Stoic philosophy (Marcus Aurelius, Epictetus, Seneca) for daily routines, reflective journaling, and purposeful task management",
  "author": "Stoic Mirror Team",
  "private": true,
  "type": "module",
  "main": "dist/main/main.cjs",
  "scripts": {
    "dev": "vite",
    "dev:electron": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "vite build",
    "build:main": "tsc -p tsconfig.main.json && node -e \"require('fs').renameSync('dist/main/main.js', 'dist/main/main.cjs')\"",
    "build:preload": "tsc -p tsconfig.preload.json && node -e \"require('fs').renameSync('dist/preload/preload.js', 'dist/preload/preload.cjs')\"",
    "build:electron": "npm run build && npm run build:main && npm run build:preload",
    "build:app": "npm run build:electron && electron-builder",
    "generate:icons": "bash scripts/convert-icon-ico.sh",
    "preview": "vite preview"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@fullcalendar/daygrid": "^6.1.19",
    "@fullcalendar/interaction": "^6.1.19",
    "@fullcalendar/react": "^6.1.19",
    "@fullcalendar/timegrid": "^6.1.19",
    "@supabase/supabase-js": "^2.78.0",
    "chrono-node": "^2.9.0",
    "electron-store": "^11.0.2",
    "electron-updater": "^6.6.2",
    "googleapis": "^167.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rrule": "^2.8.1",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.1",
    "electron": "^39.0.0",
    "electron-builder": "^26.0.12",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.3",
    "vite": "^5.4.8",
    "wait-on": "^9.0.1"
  }
}
